<body class="BodyRegistro">

<h2 style="text-align: center;">Resultados para "@ViewBag.terminoBuscado"</h2>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Imagen</th>
            <th>Naci√≥n</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ResultadoBusqueda item in ViewBag.ListaResultados)
        {
            <tr>
                <td><a href='@{
                if(item.Tipo == "A")
                @Url.Action("InfoJugador", "Home", new { IdJugador = item.IdRegistro })
                else
                @Url.Action("InfoEquipo", "Home", new { IdEquipo = item.IdRegistro })
            }'>@item.Nombre</a></td>
                <td><img src="@item.Imagen" alt=""></td>
                <td><img class="pais" src="@item.ImagenPais" alt=""></td>
                
            </tr>
        }
    </tbody>
</table>
</body>
